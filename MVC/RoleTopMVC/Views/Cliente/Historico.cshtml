@model RoleTopMVC.ViewModels.HistoricoViewModel
@{
    ViewData["Title"] = "Eventos - RoleTop";
    ViewData["H2"] = "Histórico de Eventos";
}
<header>
    <hgroup>
        <h1>Rolê Top</h1>
    </hgroup>
</header>

<main>
    <h2>@ViewData["H2"]</h2>
    <table>
        <thead>
            <tr>
                <th>Nome</th>
                <th>Data do Agendamento</th>
                <th>Tema do Evento</th>
                <th>Tipo de Evento</th>
                <th>Data do Evento</th>
                <th>Preço total</th>
            </tr>
        </thead>
        <tbody>
            @foreach( var eventos in Model.Evento) {
                <tr>
                    <td>@eventos.Cliente.Nome</td>
                    <td>@eventos.DataDoAgendamento</td>
                    <td>@eventos.Aluguel.Nome</td>
                    <td>@eventos.TipoEvento</td>
                    <td>@eventos.DataDoEvento</td>
                    <td>@eventos.PrecoTotal</td>
                </tr>
            }
        </tbody>
    </table>

</main>
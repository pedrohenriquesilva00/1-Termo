@model RoleTopMVC.ViewModels.DashboardViewModel
<main>
        <h2>Dashboard</h2>
        <section id="status-eventos">
            <h3>Status dos Eventos</h3>
            <div id="painel">
                <div class="box-status-eventos aprovados">
                    <h4>Aprovados</h4>
                    <p>@Model.EventosAprovados</p>
                </div>
                <div class="box-status-eventos pendentes">
                    <h4>Pendentes</h4>
                    <p>@Model.EventosPendentes</p>
                </div>
                <div class="box-status-eventos reprovados">
                    <h4>Reprovados</h4>
                    <p>@Model.EventosReprovados</p>
                </div>
            </div>
        </section>

        <section id="lista-eventos">
            <h3>Lista de Eventos</h3>
            <table>
                <thead>
                    <tr>
                        <th>Nome do Cliente ou Empresa</th>
                        <th>Telefone do Cliente</th>
                        <th>Email do Cliente</th>
                        <th>CNPJ da Empresa</th>
                        <th>Tema do Evento</th>
                        <th>Tipo de Evento</th>
                        <th>Quantidade de Convidados</th>
                        <th>Data do Evento</th>
                        <th>Pre√ßo Total a Pagar</th>
                        <th colspan="2" rowspan="2">Aprovar / Reprovar</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <td colspan="12">
                            <p>Eventos atualizados em @DateTime.Now</p>
                        </td>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach(var evento in Model.Eventos )
                    {
                        <tr>
                            <td>@evento.Cliente.Nome</td>
                            <td>@evento.Cliente.Telefone</td>
                            <td>@evento.Cliente.Email</td>
                            <td>@evento.Cnpj</td>
                            <td>@evento.Aluguel.Nome</td>
                            <td>@evento.TipoEvento</td>
                            <td>@evento.QuantidadePessoas</td>
                            <td>@evento.DataDoEvento</td>
                            <td>@evento.PrecoTotal</td>
                            <td><a href='@Url.Action("Aprovar", "Agendamento", new {id = @evento.Id})'><i class="fas fa-check"></i></a></td>
                            <td><a href='@Url.Action("Reprovar", "Agendamento", new {id = @evento.Id})'><i class="fas fa-times"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </main>